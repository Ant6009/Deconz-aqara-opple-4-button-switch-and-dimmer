blueprint:
  name: deCONZ - Aqara Opple - Wireless 4 Buttons remote with dimmer action
  description: |
    "Control your deCONZ light(s) with Aqara Opple 4 button switch. Turn on, off and dim two lights
    Forked from https://community.home-assistant.io/t/deconz-aqara-opple-6-way-remote-for-lights/256886
    Select the Opple remote and your lights.
    You can turn the lights On / Off, or hold the buttons to dim the lights"
  domain: automation
  input:
    remote:
      name: Remote
      description: The remote that will control the lights
      selector:
        device:
          integration: deconz
          manufacturer: 'IKEA of Sweden'
          model: 'TRADFRI on/off switch'
    light_top:
      name: Light top button
      description: The lights that will be controlled by the top button
      selector:
        target:
          entity:
            domain: light
    light_bottom:
      name: Light bottom button
      description: The lights that will be controlled by the bottom button
      selector:
        target:
          entity:
            domain: light


mode: restart

trigger:
- platform: event
  event_type: deconz_event
  event_data:
    device_id: !input 'remote'

action:
- variables:
    event: "{{ trigger.event.data.event }}"

- choose:
  - conditions:
    - "{{ event == 1002 }}"
    sequence:
    - service: light.turn_on
      target: !input 'light_top'
      data:
        transition: 1
  - conditions:
    - "{{ event == 2002 }}"
    sequence:
    - service: light.turn_off
      target: !input 'light-top'
      data:
        transition: 1
  - conditions:
    - "{{ event == 1001 }}"
    sequence:
      repeat:
        while:
        - condition: template
          value_template: "{{ repeat.index < 10 }}"
        sequence:
        - service: light.turn_on
          target: !input 'light_top'
          data:
            transition: 1
            brightness_step_pct: 10
        - delay: 1
  - conditions:
    - "{{ event == 2001 }}"
    sequence:
      repeat:
        while:
        - condition: template
          value_template: "{{ repeat.index < 10 }}"
        sequence:
        - service: light.turn_on
          target: !input 'light_top'
          data:
            transition: 1
            brightness_step_pct: -10
        - delay: 1
  - conditions:
    - "{{ event == 2002 }}"
    sequence:
    - service: light.turn_on
      target: !input 'light_bottom'
  - conditions:
    - "{{ event == 2003 }}"
    sequence:
    - service: light.turn_on
      target: !input 'light_bottom'
